<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="card text-center">
      <div class="card-header">
        <h4>Inscription</h4>
      </div>
      <div class="card-body">
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.email_field :email, class: 'form-control', placeholder: 'Adresse courriel', autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, class: 'form-control', placeholder: 'Mot de passe', autocomplete: "new-password" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirmation de mot de passe', autocomplete: "new-password" %>
        </div>

        <% if @minimum_password_length %>
          <small class="form-text text-muted">(Mot de passe de <%= @minimum_password_length %> charact√®res minimum)</small>
        <% end %>
      </div>
      <div class="card-footer">
        <%= f.submit "Inscription", class: 'btn btn-info' %>
        <%= link_to "Connexion", new_session_path(resource_name), class: 'btn btn-warning text-white' %>
      </div>
    </div>
  <% end %>
</div>