<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="card text-center">
      <div class="card-header">
        <h4>Connexion</h4>
      </div>
      <div class="card-body">
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.email_field :email, class: 'form-control', placeholder: 'Adresse courriel', autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, class: 'form-control', placeholder: 'Mot de passe', autocomplete: "new-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <%= f.label :remember_me, 'Se souvenir de moi?' %>
          </div>
        <% end %>
      </div>
      <div class="card-footer">
        <%= f.submit "Connexion", class: 'btn btn-info' %>
        <%= link_to "Inscription", new_registration_path(resource_name), class: 'btn btn-warning text-white' %>
      </div>
    </div>
  <% end %>
</div>