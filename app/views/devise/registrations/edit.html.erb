<h2>Modifier <%= resource_name.to_s.humanize %></h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, 'Adresse courriel' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, 'Mot de passe' %> <i>(laissez cette case vide si vous ne voulez pas modifier votre mot de passe)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> charactères minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'Confirmation de mot de passe' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, 'Mot de passe actuel' %> <i>(nous avons besoin de votre mot de passe actuel pour éffectuer les modifications)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Mettre à jour" %>
  </div>
<% end %>

<h3>Cloturer mon compte</h3>

<p>Insatisfait? <%= button_to "Cloturer mon compte", registration_path(resource_name), data: { confirm: "Êtes vous sur de vouloir cloturer votre compte chez nous?" }, method: :delete %></p>

<%= link_to "Retour", :back %>
